{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://geohpem.local/schema/request.json",
  "title": "GeoHPEM SolveRequest",
  "type": "object",
  "required": ["schema_version", "model", "stages"],
  "properties": {
    "schema_version": { "enum": ["0.1", "0.2"] },
    "unit_system": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "model": {
      "type": "object",
      "required": ["dimension", "mode"],
      "properties": {
        "dimension": { "const": 2 },
        "mode": { "enum": ["plane_strain", "plane_stress", "axisymmetric"] },
        "gravity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 3
        }
      },
      "additionalProperties": true
    },
    "materials": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["model_name", "parameters"],
        "properties": {
          "model_name": { "type": "string" },
          "behavior": { "type": "string" },
          "parameters": { "type": "object" }
        },
        "additionalProperties": true
      }
    },
    "assignments": { "type": "array" },
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "object" }
    },
    "output_requests": { "type": "array" }
  },
  "additionalProperties": true
}
